# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=viskatera_db
# For production, use: DB_SSLMODE=require

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_ENABLED=true
CACHE_TTL=300
# Cache TTL in seconds (default: 300 = 5 minutes)

# Application Configuration
ENVIRONMENT=development
# Options: development, production, prod
GIN_MODE=debug
# Options: debug, release, test
PORT=8080

# Security
JWT_SECRET=your-super-secret-jwt-key-here
# Generate strong secret with: openssl rand -base64 64 | tr -d '\n' | cut -c1-64

# Xendit Configuration
XENDIT_SECRET_KEY=xnd_secret_development_xxxxxxxxxxxxx
XENDIT_PUBLIC_KEY=xnd_public_development_xxxxxxxxxxxxx
XENDIT_API_URL=https://api.xendit.co

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/google/callback
# For production: https://api.ahmadcorp.com/api/v1/auth/google/callback

# Application URLs
APP_BASE_URL=http://localhost:8080
# For production: https://api.ahmadcorp.com

# Traefik & Let's Encrypt
ACME_EMAIL=admin@ahmadcorp.com
# Email untuk Let's Encrypt certificate notifications

# SMTP Configuration (for production)
# Leave empty to use MailHog (development) at localhost:1025
# MailHog web UI: http://localhost:8025
SMTP_HOST=
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@viskatera.com
